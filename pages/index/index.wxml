<import src="../../template/index_sections.wxml"/>

<view style="display:none">
  <image wx:for="{{images}}" wx:key="id" id="{{item.id}}" src="{{item.pic}}" bindload="onImageLoad"></image>
</view>

<scroll-view scroll-y="true" style="height:{{scrollH}}px">
<!-- bindscrolltolower="loadImages"> -->
  
<!--显示首页img-->
  <view class="img_top">
    <image src="/images/top_img.png" style="width:720rpx" mode="widthFix"></image>
  </view>
<!---->

<!--显示分类-->
  <view style="width:720rpx;margin:10rpx 15rpx 7.5rpx 15rpx;display:flex">
    <template wx:for="{{sections1}}"  wx:key="idx" is="index_sections" data="{{item}}"></template>
  </view>

  <view style="width:720rpx;margin:7.5rpx 15rpx 10rpx 15rpx;display:flex">
    <template wx:for="{{sections2}}" wx:key="idx" is="index_sections" data="{{item}}" ></template>
  </view>
<!---->

  <view class="home_img_container" style="width:750">
    <!--商品左列-->
    <view class="img_col1">
      <view class="img_col_item" wx:for="{{col1}}" wx:key="id">
        <view class="img_item_index">
          <image class="user_avatar" src="/images/ava_1.jpg"></image>
          <text class="user_index">土木一枝花</text>
          <text class="user_location">牌区</text>
        </view>
        <image class="img-item" src="{{item.pic}}" style="width:100%;height:{{item.height}}px" mode="aspectFill"></image>
      </view>
    </view>
    <!---->

    <!--商品右列-->
    <view class="img_col2">
      <view class="img_col_item" wx:for="{{col2}}" wx:key="id">
        <view class="img_item_index">
          <image class="user_avatar" src="/images/ava_1.jpg"></image>
          <text class="user_index">土木一枝花</text>
          <text class="user_location">牌区</text>
        </view>
        <image class="img-item" src="{{item.pic}}" style="width:100%;height:{{item.height}}px" mode="aspectFill"></image>
      </view>
    </view>
    <!---->
  </view>
</scroll-view>