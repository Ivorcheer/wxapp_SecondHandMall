.img_top {
  width: 100%;
  margin: 1% 2% 1% 2%;
}

.section{
  width:230rpx;
  height:230rpx;
  margin:5rpx 5rpx 5rpx 5rpx;
  display: flex;
  background-color: #F5F5F5;
  border-radius: 10%;
}
.section_img{
  width:75rpx;
  height:75rpx;
  display:inline-block;
  vertical-align: middle;
  background-color: #fff;
}

.home_img_container {
  background-color: #F5F5F5;
}

.img_col1 {
  width: 46%;
  margin: 1% 1% 0% 3%; /*上右下左*/
  display: inline-block;
  vertical-align: top;
}

.img_col2 {
  width: 46%;
  margin: 1% 3% 0% 1%;
  display: inline-block;
  vertical-align: top;
}

.img_col_item {
  margin: 10rpx 0 10rpx 0;
  border-radius: 2%;
}

.img_item_index {
  background-color: #fff;
  display: block;
}

.user_avatar {
  display:inline-block;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx 10rpx 10rpx 10rpx;
  border-radius: 50%;
}
.user_index {
  display:inline-block;
  vertical-align: middle;
  width:200rpx;
  font-size:13px; 
  margin: 10rpx 0 10rpx 0;
}
.user_location{
  display:inline-block;
  vertical-align: middle;
  width:60rpx;
  font-size:13px;
  color: #E74552;
  margin: 10rpx 0 10rpx 0;
}
