.img_top {
  width: 720rpx;
  margin: 7.5rpx 15rpx 7.5rpx 15rpx;
}

.section {
  width: 235rpx;
  height: 235rpx;
  margin: 5rpx 7.5rpx 5rpx 7.5rpx;
  display: flex;
  background-color: #f5f5f5;
  border-radius: 5%;
}
.section_container {
  width: 80rpx;
  height: 200rpx;
  display: flex;
  margin: 10px;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}
.section_img {
  flex: 2;
  justify-content: center;
  align-items: center;
  display: flex;
}
.section_name{
  flex:1;
  background-color: #f5f5f5;
}

.home_img_container {
  background-color: #f5f5f5;
}

.img_col1 {
  width: 350rpx;
  margin: 10rpx 10rpx 0 15rpx; /*上右下左*/
  display: inline-block;
}

.img_col2 {
  width: 350rpx;
  margin: 10rpx 15rpx 0 10rpx;
  display: inline-block;
}

.img_col_item {
  margin: 10rpx 0 0 0;
  border-radius: 5%;
}

.img_item_index {
  background-color: #fff;
  display: block;
}

.user_avatar {
  display: inline-block;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx 10rpx 10rpx 10rpx;
  border-radius: 50%;
}

.user_index {
  display: inline-block;
  vertical-align: middle;
  width: 200rpx;
  font-size: 13px;
  margin: 10rpx 0 10rpx 0;
}

.user_location {
  display: inline-block;
  vertical-align: middle;
  width: 60rpx;
  color: #e74552;
  margin: 10rpx 0 10rpx 0;
}

text{
  font-size: 13px;
}
